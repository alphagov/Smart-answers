<% content_for :title do %>
  How much are your tuition fees per year?
<% end %>

<% content_for :hint do %>
  The maximum is £<%= number_with_delimiter(calculator.tuition_fee_maximum_full_time) %> for full-time students and £<%= number_with_delimiter(calculator.tuition_fee_maximum_part_time) %> for part-time students.
<% end %>

